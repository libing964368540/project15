/* components/prompt/index.wxss */
.prompt-box {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 11;
  background: rgba(0, 0, 0, .5);
}

.prompt-content {
  position: absolute;
  left: 50%;
  top: 40%;
  width: 80%;
  max-width: 600rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
}

.prompt-title {
  width: 100%;
  /* padding: 20rpx; */
  text-align: center;
  font-size: 30rpx;
  color: #101010;
  font-weight: bold;
  /* border-bottom: 2rpx solid gray; */
}
.prompt-input{
  padding: 5rpx 10rpx;
  width: 80%;
  height:150rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  color: #101010;
  margin: 0 auto;
}
.prompt-btn-group{
  display: flex;
}

.btn-item {
  width: 35%;
  margin-bottom: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: white;
  justify-content: space-around;
  font-size:16px;

}
.prompt-certain-btn{
  color: white;
  background-color: #2169f3;
}
.prompt-cancel-btn{
  color: #fff;
  background: #929292;
  /* border: 1px solid #4FEBDE; */
}
.contentFontColor {
  color: #ffffff;
}